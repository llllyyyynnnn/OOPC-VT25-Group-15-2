<Window x:Class="MemberWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemberWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000" Style="{DynamicResource MainWindowStyle}">
    <Grid Style="{StaticResource MainGridLayout}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="logInPanel" Grid.Row="1" Grid.Column="1" Width="500">
            <TextBox x:Name="logInEmailTextBox"/>
            <PasswordBox x:Name="logInPasswordTextBox"/>
            <Button Content="Log in" Click="LogIn_Click">
            </Button>
        </StackPanel>

        <StackPanel x:Name="registerPanel" Grid.Row="1" Grid.Column="1" Width="500" Visibility="Collapsed">
            <TextBox x:Name="regEmailTextBox" Text="Email"/>
            <TextBox x:Name="regFirstNameTextBox" Text ="First name"/>
            <TextBox x:Name="regLastNameTextBox" Text="Last name"/>
            <TextBox x:Name="regPhoneNumberTextBox" Text="Phone number"/>
            <TextBox x:Name="regSpecialisation" Text="Specialisation"/>
            <PasswordBox x:Name="regPasswordTextBox"/>
            <DatePicker x:Name="regDateofBirth" Height="30"/>
            <Button Content="Register" Click="Register_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Width="400">
            <Label x:Name="TitleLabel" Content="Member - Log In" FontSize="24" Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Width="400">
            <Label x:Name="noAccountLabel" Content="Don't have an account?" MouseDown="NoAccount_MouseDown" FontSize="12" Foreground="{DynamicResource ForegroundInactiveBrush}" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
            <Label Content="Forgot password" MouseDown="ForgotPassword_MouseDown" FontSize="12" Foreground="{DynamicResource ForegroundInactiveBrush}" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
