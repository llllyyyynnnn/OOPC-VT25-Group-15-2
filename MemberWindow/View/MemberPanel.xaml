<Window x:Class="MemberWindow.MemberPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemberWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Style="{DynamicResource MainWindowStyle}">
    
    <Grid Style="{StaticResource MainGridLayout}" HorizontalAlignment="Stretch" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="1">
            <TabControl TabStripPlacement="Left" Width="Auto" Height="Auto">
                <TabItem Header="Account">
                    <DockPanel VerticalAlignment="Top">
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0" HorizontalAlignment="Right"  Width="Auto">
                            <Button x:Name="logOutButton" Content="Log out"/>
                        </StackPanel>

                        <StackPanel Width="Auto" Height="Auto">
                            <DockPanel>
                                <StackPanel Height="Auto" Width="380">
                                    <Label Content="Information" FontSize="24"/>
                                    <Label Content="{Binding welcomeMember}"/>
                                </StackPanel>
                                <StackPanel Height="Auto" Width="Auto">
                                    <Image Source="/Images/Information.png" Height="128" Width="128"/>
                                </StackPanel>
                            </DockPanel>
                            <DockPanel>
                                <StackPanel Height="Auto" Width="380">
                                    <Label Content="Settings" FontSize="24"/>
                                    <Label Content="{Binding mailAddress}"/>
                                    <TextBox Text="{Binding currentPinCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Text="{Binding newPinCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <Button Content="Save changes" Command="{Binding cmdSaveNewPinCode}"/>
                                </StackPanel>
                                <StackPanel Height="Auto" Width="Auto">
                                    <Image Source="/Images/Config.png" Height="128" Width="128"/>
                                </StackPanel>
                            </DockPanel>
                        </StackPanel>
                    </DockPanel>
                </TabItem>

                <TabItem Header="Sessions">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0" HorizontalAlignment="Right" Width="Auto">
                            <Button x:Name="sampleButton2" Content="Sample"/>
                        </StackPanel>
                        <DataGrid x:Name="sampleList2" AutoGenerateColumns="True" SelectionMode="Single" IsReadOnly="True" HeadersVisibility="Column" />
                    </DockPanel>
                </TabItem>


                <TabItem Header="Activity">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0" HorizontalAlignment="Right" Width="Auto">
                            <Button x:Name="sampleButton3" Content="Sample"/>
                        </StackPanel>
                        <DataGrid x:Name="sampleList3" AutoGenerateColumns="True" SelectionMode="Single" IsReadOnly="True" HeadersVisibility="Column" />
                    </DockPanel>
                </TabItem>

                <TabItem Header="Members">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0" HorizontalAlignment="Right" Width="Auto">
                            <Button Content="View"/>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Vertical" VerticalAlignment="Top" Margin="0" HorizontalAlignment="Left" Height="Auto" Width="Auto">
                            <DataGrid ItemsSource="{Binding members}" SelectedItem="{Binding selectedMember, Mode=TwoWay}" AutoGenerateColumns="False" HeadersVisibility="Column" IsReadOnly="True" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding id}" />
                                    <DataGridTextColumn Header="First Name" Binding="{Binding firstName}" />
                                    <DataGridTextColumn Header="Last Name" Binding="{Binding lastName}" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <Label Content="Contact details" FontSize="24"/>
                            <Label Content="{Binding selectedMember.phoneNumber}" />
                            <Label Content="{Binding selectedMember.mailAddress}" />
                        </StackPanel>
                    </DockPanel>
                </TabItem>

            </TabControl>
        </DockPanel>
    </Grid>
</Window>
