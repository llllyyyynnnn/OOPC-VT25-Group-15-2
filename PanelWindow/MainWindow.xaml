<Window x:Class="PanelWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PanelWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Foreground="{StaticResource ForegroundBrush}">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF121315"/>
            <GradientStop Color="#FF0D0C1B" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="25" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#7F000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.20*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Grid.Row="1" Grid.Column="1" Width="400">
            <TextBox x:Name="emailTextBox" FontSize="18" Background="{x:Null}" Margin="10" BorderBrush="{DynamicResource ForegroundBrush}" Foreground="{DynamicResource ForegroundBrush}" BorderThickness="0,0,0,1" SelectionBrush="{DynamicResource ColorBrush}"/>
            <TextBox x:Name="passwordTextBox" FontSize="18" Background="{x:Null}" Margin="10" BorderBrush="{DynamicResource ForegroundBrush}" Foreground="{DynamicResource ForegroundBrush}" BorderThickness="0,0,0,1" SelectionBrush="{DynamicResource ColorBrush}"/>
            <Button Content="Log in" FontSize="18" Background="{x:Null}" Margin="10" BorderBrush="{DynamicResource ForegroundBrush}" Height="40" BorderThickness="1,1,1,1" Foreground="{DynamicResource ForegroundBrush}" Click="LogIn_Click_1"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Grid.Row="0" Grid.Column="1" Width="400">
            <Label Content="Sport Application - Log In" FontSize="24" Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Grid.Row="2" Grid.Column="1" Width="400">
            <Label Content="Don't have an account?" MouseDown="NoAccount_MouseDown" FontSize="12" Foreground="{DynamicResource ForegroundInactiveBrush}" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
            <Label Content="Forgot password" MouseDown="ForgotPassword_MouseDown" FontSize="12" Foreground="{DynamicResource ForegroundInactiveBrush}" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
