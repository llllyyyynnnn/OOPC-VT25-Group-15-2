<Window x:Class="PanelWindow.SignedIn_GearLoanUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PanelWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600" Style="{DynamicResource MainWindowStyle}">
    
    <Grid Style="{StaticResource MainGridLayout}" HorizontalAlignment="Stretch" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="1" Width="Auto">
            <Label x:Name="TitleLabel" Content="Window for creating / modifying gear" FontSize="24" Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel x:Name="gearRegistrationPanel" Grid.Row="1" Grid.Column="1" Width="500">
            <DatePicker x:Name="gearLoanStartDate" Height="30"/>
            <DatePicker x:Name="gearLoanReturnDate" Height="30"/>
            <ComboBox x:Name="gearLoansMembersList" DisplayMemberPath="memberInformation" SelectedValuePath="memberId" Height="Auto" Width="Auto" Margin="10"/>
            <Button Content="Confirm" Click="Confirm_Click"/>
        </StackPanel>
    </Grid>
</Window>
