<Window x:Class="PanelWindow.SignedIn_MemberUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PanelWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600" Style="{DynamicResource MainWindowStyle}">
    <Grid Style="{StaticResource MainGridLayout}" HorizontalAlignment="Stretch" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="1" Width="Auto">
            <Label x:Name="TitleLabel" Content="Window for creating / modifying member" FontSize="24" Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel x:Name="registerPanel" Grid.Row="1" Grid.Column="1" Width="500">
            <TextBox x:Name="regEmailTextBox" Text="Email"/>
            <TextBox x:Name="regFirstNameTextBox" Text ="First name"/>
            <TextBox x:Name="regLastNameTextBox" Text="Last name"/>
            <TextBox x:Name="regPhoneNumberTextBox" Text="Phone number"/>
            <PasswordBox x:Name="regPasswordTextBox"/>
            <DatePicker x:Name="regDateofBirth" Height="30"/>
            <Button Content="Confirm" Click="Confirm_Click"/>
        </StackPanel>
    </Grid>
</Window>
